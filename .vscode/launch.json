    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Client (Alice)",
            "type": "debugpy",
            "request": "launch",
            "program": "2024-03-06/main.py",
            "console": "integratedTerminal",
            "args": "-c 2024-03-06/alice.yaml"
        },
        {
            "name": "Python Debugger: Client (Bob)",
            "type": "debugpy",
            "request": "launch",
            "program": "2024-03-06/main.py",
            "console": "integratedTerminal",
            "args": "-c 2024-03-06/bob.yaml"
        },
    ]
}
